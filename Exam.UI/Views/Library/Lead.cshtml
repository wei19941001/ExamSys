
@model List<Exam.Model.Exam_Library>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="larry-fluid larry-wrapper">
    <div class="layui-row lay-col-space20">
        <div class="layui-cos-xs12 layui-col-sm12 layui-col-md12 layui-col-lg12">
            <section class="larry-body  fadeInRightBig">
                <div class="larry-body-header">
                    <span class="tit">导入题库</span>
                </div>
                <div class="larry-body-content clearfix">
                    <form class="layui-form" id="form1" method="post" action="Lead" enctype="multipart/form-data">
                        <div class="layui-form-item">
                            <label class="layui-form-label">请选择要导入的题库</label>
                            <div class="layui-input-block">
                                <select name="libraryname" lay-verify="required">
                                    <option value=""></option>
                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.LibraryID">@item.Library_Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">请选择要上传的文件</label>
                            <div class="layui-input-block">
                                <input type="file" name="excelname" id="txt_excel" class="AA">
                            </div>
                        </div>

                        <div class="layui-form-item">
                            <div class="layui-input-block">

                                @*<input class="layui-btn" id="btnSave" onclick="return Save();" type="submit" value="立即提交" />*@
                                <button class="layui-btn larry-btn" lay-filter="submit" lay-submit>立即提交</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>
