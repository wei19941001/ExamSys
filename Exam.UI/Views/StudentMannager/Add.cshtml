@{
    
        Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<div class="larry-fluid larry-wrapper">
    <div class="layui-row lay-col-space20">
        <div class="layui-cos-xs12 layui-col-sm12 layui-col-md12 layui-col-lg12">
            <section class="larry-body  fadeInRightBig">
                <div class="larry-body-header">
                    <span class="tit">添加学生</span>
                </div>
                <div class="larry-body-content clearfix">
                    <form class="layui-form" id="form1">
                        <div class="layui-form-item">
                            <label class="layui-form-label">用户名</label>
                            <div class="layui-input-block">
                                <input type="text" name="UserName" id="txt_UserName" required lay-verify="required" aautocomplete="off" class="layui-input larry-input" placeholder="请输入用户名">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">姓名</label>
                            <div class="layui-input-block">
                                <input type="text" name="RealName" id="txt_RealName" required lay-verify="required" aautocomplete="off" class="layui-input larry-input" placeholder="请输入姓名">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">手机号</label>
                            <div class="layui-input-block">
                                <input type="text" name="Phone" id="txt_Phone" required lay-verify="required" aautocomplete="off" class="layui-input larry-input" placeholder="请输入姓名">
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <div class="layui-input-block">
                                <input type="hidden" name="lmid" id="txt_lmid" value="@ViewBag.Lmid" />
                                <input class="layui-btn" id="btnSave" onclick="return Save();" type="button" value="立即提交" />
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>
<script>

    function Save()
    {
        //var title = $("#txt_Title").val();
        //if (title == "")
        //{
        //    layer.msg("标题不能为空");
        //    return false;
        //}

        $.post("@Url.Action("Add", "StudentMannager")",$('#form1').serialize(),function(data)
        {
            if (data.success) {
                layer.msg("添加成功");
                setTimeout(function () {
                    //top.document.getElementById('tabCtrA').click();
                    window.location.href = "/StudentMannager/Index";
                }, 1000);
            } else {
                layer.msg("添加失败," + data.msg);
            }
        });
        return false;
    }
</script>
